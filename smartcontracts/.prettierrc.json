{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 100,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false,
        "explicitTypes": "always"
      }
    },
    {
      "files": ["*.test.ts", "*.js"],
      "options": {
        "printWidth": 80,
        "tabWidth": 2
      }
    }
  ]
}
